{
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src/*", "src/**/*", "src/**/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}